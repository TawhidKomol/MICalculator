<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/secondary_viewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/display"
        android:gravity="right"
        android:paddingTop="15dp"
        android:paddingRight="10dp"
        android:textColor="@color/text"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/primary_viewId"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:background="@color/display"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="0"
        android:textColor="@color/text"
        android:textSize="50dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="6">

        <Button
            android:id="@+id/mc_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="MC"
            android:textSize="15dp" />

        <Button
            android:id="@+id/mr_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="MR"
            android:textSize="15dp" />

        <Button
            android:id="@+id/mPlus_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="M+"
            android:textSize="15dp" />

        <Button
            android:id="@+id/mMinus_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="M-"
            android:textSize="15dp" />

        <Button
            android:id="@+id/ms_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="MS"
            android:textSize="15dp" />

        <Button
            android:id="@+id/m_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/background"
            android:text="M⏑"
            android:textSize="15dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:textSize="25dp"
        android:weightSum="4">

        <Button
            android:id="@+id/percent_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:text="%"
            android:textColor="@color/text"
            android:textSize="26dp" />

        <Button
            android:id="@+id/ce_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt13"
            android:textColor="@color/text"
            android:text="CE"
            android:textSize="24dp" />

        <Button
            android:id="@+id/c_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt13"
            android:text="C"
            android:textColor="@color/text"
            android:textSize="25dp" />

        <Button
            android:id="@+id/back_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/clear1"
            android:textSize="25dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/oneByx_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:textColor="@color/text"
            android:text="1/x"
            android:textSize="20dp" />

        <Button
            android:id="@+id/xSquare_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:textColor="@color/text"
            android:text="x^2"
            android:textSize="20dp" />

        <Button
            android:id="@+id/squareRoot_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:textColor="@color/text"
            android:text="√"
            android:textSize="25dp" />
        <Button
            android:id="@+id/division_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:text="÷"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/seven_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="7"
            android:textSize="28dp" />

        <Button
            android:id="@+id/eight_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="8"
            android:textSize="28dp" />

        <Button
            android:id="@+id/nine_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="9"
            android:textSize="28dp" />

        <Button
            android:id="@+id/multi_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:paddingTop="5dp"
            android:text="*"
            android:textSize="28dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/four_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="4"
            android:textSize="28dp" />

        <Button
            android:id="@+id/five_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="5"
            android:textSize="28dp" />

        <Button
            android:id="@+id/six_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="6"
            android:textSize="28dp" />

        <Button
            android:id="@+id/subtraction_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:text="—"
            android:textSize="22dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/one_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="1"
            android:textSize="28dp" />

        <Button
            android:id="@+id/two_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="2"
            android:textSize="28dp" />

        <Button
            android:id="@+id/three_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="3"
            android:textSize="28dp" />
        <!--⨉-->
        <Button
            android:id="@+id/addition_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt11"
            android:text="+"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:orientation="horizontal"
        android:weightSum="4">

        <Button
            android:id="@+id/plusMinus_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="+/-"
            android:textSize="20dp" />

        <Button
            android:id="@+id/zero_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:text="0"
            android:textSize="28dp" />

        <Button
            android:id="@+id/point_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt12"
            android:textColor="@color/text"
            android:paddingBottom="10dp"
            android:text="."
            android:textSize="35dp" />

        <Button
            android:id="@+id/equal_btnID"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bt13"
            android:text="="
            android:textColor="@color/text"
            android:textSize="30dp" />
    </LinearLayout>


</LinearLayout>